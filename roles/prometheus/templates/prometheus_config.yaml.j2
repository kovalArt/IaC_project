global:
  scrape_interval: 15s


scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']
    metrics_path: /prometheus/metrics

  - job_name: 'linux'
    static_configs:
      - targets:
        {% for host in groups['all'] %}
        - '{{ host }}:9100'
        {% endfor %}
  
  - job_name: 'mysql'
    static_configs:
      - targets:
          {% for vm in groups['db_servers'] %}
           - {{ hostvars[vm]['inventory_hostname'] }}:{{ prometheus_exporters['mysql']['port'] }}
          {% endfor %}
  
  - job_name: 'DNS - bind9'
    static_configs:
      - targets:
          {% for vm in groups['dns_server'] %}
           - {{ hostvars[vm]['inventory_hostname'] }}:{{ prometheus_exporters['bind']['port'] }}
          {% endfor %}

  - job_name: 'Web server - 1'
    static_configs:
      - targets:
          {% for vm in groups['all'] %}
           - {{ hostvars[vm]['inventory_hostname'] }}:{{ prometheus_exporters['nginx']['port'] }}
          {% endfor %}