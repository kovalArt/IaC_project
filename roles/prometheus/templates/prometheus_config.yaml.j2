global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:{{ prometheus_port }}']
    metrics_path: /prometheus/metrics

  - job_name: 'linux'
    static_configs:
      - targets:
        {% for host in groups['all'] %}
        - {{ host }}:{{ prometheus_exporters['node']['port'] }}
        {% endfor %}
  
  - job_name: 'mysql'
    static_configs:
      - targets:
        {% for vm in groups['db_servers'] %}
          - mysql-{{ loop.index0 + 1 }}.{{ startup_name }}:{{ prometheus_exporters['mysql']['port'] }}
        {% endfor %}
    
  - job_name: 'DNS - bind9'
    static_configs:
      - targets:
          {% for vm in groups['dns_server'] %}
           - {{ hostvars[vm]['inventory_hostname'] }}:{{ prometheus_exporters['bind']['port'] }}
          {% endfor %}

  - job_name: 'Web server'
    static_configs:
      - targets:
          {% for vm in groups['web_servers'] %}
           - {{ hostvars[vm]['inventory_hostname'] }}:{{ prometheus_exporters['nginx']['port'] }}
          {% endfor %}

  - job_name: 'influxdb'
    static_configs:
      - targets:
          {% for vm in groups['influxdb'] %}
           - influxdb.{{ startup_name }}:{{ prometheus_exporters['influxdb']['port'] }}
          {% endfor %}

  - job_name: 'haproxy'
    static_configs:
      - targets:
        {% for vm in groups['db_servers'] %}
          - lb-{{ loop.index0 + 1 }}.{{ startup_name }}:{{ prometheus_exporters['haproxy']['port'] }}
        {% endfor %}

  - job_name: 'keepalived'
    static_configs:
      - targets:
        {% for vm in groups['db_servers'] %}
          - lb-{{ loop.index0 + 1 }}.{{ startup_name }}:{{ prometheus_exporters['keepalived']['port'] }}
        {% endfor %}