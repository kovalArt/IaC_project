server {
	listen 80 default_server;
	server_name _;

	location / {
		proxy_set_header Host $http_host;
		uwsgi_pass localhost:5000;
		include uwsgi_params;
		proxy_pass http://kovalart-2:{{ agama_port }};
	}

	location /prometheus {
		proxy_pass http://kovalart-2:9090;
	}

	location /grafana {
		proxy_set_header Host $http_host;
		proxy_pass http://kovalart-2:{{ grafana_port }};
	}

}

server {
	listen 8080 default_server;

	location = /stub_status {
		stub_status;
	}

}