server {
	listen 80 default_server;
	server_name _;

	location / {
		proxy_set_header Host $http_host;
	}	

	location /prometheus {
		proxy_pass http://localhost:{{ prometheus_port }};
	}

	location /grafana {
		proxy_set_header Host $http_host;
		proxy_pass http://localhost:{{ grafana_port }};
	}

}

server {
	listen {{ nginx_statistics }} default_server;

	location = /stub_status {
		stub_status;
	}

}