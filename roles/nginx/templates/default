server {
	listen 80 default_server;
	server_name _;

	location / {
		proxy_set_header Host $http_host;
		uwsgi_pass localhost:5000;
		include uwsgi_params;
	}

	location /prometheus {
		proxy_pass http://prometheus.{{ startup_name }}:{{ prometheus_port }};
	}

	location /grafana {
		proxy_set_header Host $http_host;
		proxy_pass http://grafana.{{ startup_name }}:{{ grafana_port }};
	}

}

server {
	listen {{ nginx_statistics }} default_server;

	location = /stub_status {
		stub_status;
	}

}